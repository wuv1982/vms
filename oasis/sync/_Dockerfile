FROM ubuntu:trusty
MAINTAINER Orbital
VOLUME ["/public"]

# Install unzip
RUN \
  apt-get install -y unzip

# Install Java.
RUN \
  echo oracle-java8-installer shared/accepted-oracle-license-v1-1 select true | debconf-set-selections && \
  apt-get install -y software-properties-common && \
  add-apt-repository -y ppa:webupd8team/java && \
  apt-get update && \
  apt-get install -y oracle-java8-installer && \
  rm -rf /var/lib/apt/lists/* && \
  rm -rf /var/cache/oracle-jdk8-installer

# Define commonly used JAVA_HOME variable
ENV JAVA_HOME /usr/lib/jvm/java-8-oracle

# mongodb
ENV MONGODB_VER 3.0.4
RUN apt-key adv --keyserver hkp://keyserver.ubuntu.com:80 --recv 7F0CEB10
RUN echo "deb http://repo.mongodb.org/apt/ubuntu "$(lsb_release -sc)"/mongodb-org/3.0 multiverse" \
| sudo tee /etc/apt/sources.list.d/mongodb-org-3.0.list
RUN apt-get -y update

RUN apt-get install -y mongodb-org=${MONGODB_VER}\
  mongodb-org-server=${MONGODB_VER}\
  mongodb-org-shell=${MONGODB_VER}\
  mongodb-org-mongos=${MONGODB_VER}\
  mongodb-org-tools=${MONGODB_VER}


# playframework
ENV ACTIVATOR_VER 1.3.5
RUN curl -O http://downloads.typesafe.com/typesafe-activator/${ACTIVATOR_VER}/typesafe-activator-${ACTIVATOR_VER}.zip
RUN unzip typesafe-activator-${ACTIVATOR_VER}.zip -d /\
  && rm typesafe-activator-${ACTIVATOR_VER}.zip\
  && chmod a+x /activator-${ACTIVATOR_VER}/activator
ENV PATH $PATH:/activator-${ACTIVATOR_VER}

RUN \
  rm -rf /var/lib/apt/lists/* && \
  rm -rf /var/cache/*
